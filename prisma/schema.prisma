generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password_hash String
  name          String
  created_at    DateTime       @default(now())
  files         Files[]
  folders       Folders[]
  sharedFiles   Shared_Files[] @relation("SharedWithUser")
}

model Files {
  id            Int             @id @default(autoincrement())
  original_name String
  storage_key   String
  mime_type     String
  size          Int
  is_deleted    Boolean         @default(false)
  uploaded_at   DateTime        @default(now())
  user_id       Int
  user          User            @relation(fields: [user_id], references: [id])
  fileVersions  File_Versions[]
  sharedFiles   Shared_Files[]
}

model Folders {
  id               Int       @id @default(autoincrement())
  name             String
  created_at       DateTime  @default(now())
  user_id          Int
  user             User      @relation(fields: [user_id], references: [id])
  parent_folder_id Int?
  parent_folder    Folders?  @relation("FolderHierarchy", fields: [parent_folder_id], references: [id])
  subfolders       Folders[] @relation("FolderHierarchy")
}

model File_Versions {
  id             Int      @id @default(autoincrement())
  file_id        Int
  file           Files    @relation(fields: [file_id], references: [id])
  version_number Int
  storage_key    String
  created_at     DateTime @default(now())
}

enum Permission {
  READ
  WRITE
}

model Shared_Files {
  id               Int        @id @default(autoincrement())
  expires_at       DateTime   @default(now())
  file_id          Int
  file             Files      @relation(fields: [file_id], references: [id])
  user_id          Int
  shared_with_user User       @relation("SharedWithUser", fields: [user_id], references: [id])
  permission       Permission
}
